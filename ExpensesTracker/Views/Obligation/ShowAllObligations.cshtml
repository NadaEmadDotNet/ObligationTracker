@model List<ExpensesTracker.Models.Obligation>

@{
    ViewData["Title"] = "All Obligations";
}

<div class="container mt-4">
    <!-- Summary Section -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">💰 Total Amount</h5>
                    <p class="card-text display-6 text-primary">@ViewBag.TotalAmount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">✅ Total Paid</h5>
                    <p class="card-text display-6 text-success">@ViewBag.TotalPaid</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">⏳ Remaining</h5>
                    <p class="card-text display-6 text-danger">@ViewBag.TotalRemaining</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Obligations Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">📋 Obligations List</h4>
        </div>
        <div class="card-body">
            <!-- Obligations Cards -->
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card shadow-lg border-0 obligation-card">
                            <div class="card-body text-center">
                                <h5 class="card-title fw-bold text-primary">@item.Name</h5>
                                <p class="card-text text-muted mb-2">
                                    Amount: <span class="fw-bold">@item.Amount</span>
                                </p>
                                <p class="card-text text-muted">
                                    Paid: <span class="fw-bold">@item.PaidAmount</span>
                                </p>

                                @if (item.IsPaid)
                                {
                                    <span class="badge bg-success px-3 py-2 rounded-pill">
                                        Paid ✅
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger px-3 py-2 rounded-pill">
                                        Not Paid ❌
                                    </span>
                                }

                                <div class="mt-3">
                                    <a asp-action="EditObligation" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <form asp-action="DeleteObligation" asp-route-id="@item.Id" method="post" style="display:inline">
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this obligation?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <style>
                .obligation-card {
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                    border-radius: 20px;
                }

                    .obligation-card:hover {
                        transform: translateY(-8px) scale(1.02);
                        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
                    }

                .card-title {
                    font-size: 1.3rem;
                }
            </style>

@*             <a asp-controller="Obligation" asp-action="AddObligation"> Return To Add New Obligation</a>
 *@            <div class="text-center mt-4">
                <a asp-controller="Obligation" asp-action="AddObligation"
                   class="btn btn-lg btn-gradient">
                    ➕ Add New Obligation
                </a>
            </div>

            <style>
                .btn-gradient {
                    background: linear-gradient(45deg, #4facfe, #00f2fe);
                    color: white !important;
                    font-weight: bold;
                    padding: 12px 28px;
                    border-radius: 30px;
                    text-decoration: none;
                    transition: all 0.3s ease;
                    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
                }

                    .btn-gradient:hover {
                        background: linear-gradient(45deg, #43e97b, #38f9d7);
                        transform: translateY(-4px);
                        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
                    }
            </style>


        </div>
    </div>
</div>
